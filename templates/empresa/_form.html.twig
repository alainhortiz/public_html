        <div class="col-sm-12">
            <div class="form-group">
                <div class="text-danger">
                    {{ form_errors(form) }}
                </div>
                <div class="input-group">
                    {{ form_widget(form.nombre) }}
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group">
                <div class="text-danger">
                    {{ form_errors(form) }}
                </div>
                <div class="input-group">
                    {{ form_widget(form.no) }}
                </div>
            </div>
        </div>
        <div class="col-sm-12">
